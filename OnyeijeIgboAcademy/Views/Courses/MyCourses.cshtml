@model List<OnyeijeIgboAcademy.Models.Course>
@{
    ViewData["Title"] = "MyCourses";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}



<div class="header header-dark bg-primary pb-6 content__title content__title--calendar">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6">
                    <h6 class="fullcalendar-title h2 text-white d-inline-block mb-0">MyCourses</h6>
                    <nav aria-label="breadcrumb" class="d-none d-lg-inline-block ml-lg-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a asp-action="StudentDashboard" asp-controller="Dashboard"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a asp-action="Courses" asp-controller="Courses">View all Courses</a></li>
                            <li class="breadcrumb-item active" aria-current="page">MyCourses</li>
                        </ol>
                    </nav>
                </div>

            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="container">
    <div class="row">

        @if (Model.Count() > 0)
        {
            @foreach (var course in Model)
            {
            

                <div class="col-lg-3">
                    <!-- Image-Text card -->
                    <div class="card">
                        <br />
                        <!-- Card image -->
                        <a asp-action="MyCourseDetail" asp-controller="Courses" asp-route-id="@course.CourseId"><img src="~/uploads/@course.ImageUrl" class="img-fluid card-img-top" alt="" title="Take me to course"></a>
                        <!-- Card body -->
                        <div class="card-body">
                            <h5 class="h2 card-title mb-0">@course.CourseTitle</h5>

                            <a asp-controller="Courses" asp-action="MyCourseDetail" asp-route-id="@course.CourseId" class="btn btn-link px-0">View Course</a>
                        </div>
                    </div>


                </div>
            }
        }
        else
        {
            <h2>You have not enrolled for any course Yet</h2>
        }


        <!-- /box_grid -->

    </div>
    <!-- /row -->

</div>

<div class="row">

</div>