@model OnyeijeIgboAcademy.Models.Course
@{
    ViewData["Title"] = "CourseDetail";
    Layout = "~/Views/Shared/_FrontEndLayout.cshtml";
}
<section id="hero_in" class="courses">
    <div class="wrapper">
        <div class="container">
            <h1 class="fadeInUp"><span></span>Online course detail</h1>
        </div>
    </div>
</section>
<!--/hero_in-->

<div class="bg_color_1">
    <nav class="secondary_nav sticky_horizontal">
        <div class="container">
            <ul class="clearfix">
                <li><a href="#description" class="active">Course Description</a></li>
                <li><a href="#lessons">Modules</a></li>
                <li><a href="#reviews">Reviews</a></li>
            </ul>
        </div>
    </nav>
    <div class="container margin_60_35">
        <div class="row">
            <div class="col-lg-8">

                <section id="description">
                    <h2>Description</h2>
                    @Html.Raw(Model.Description)
                    <h5>What will you learn</h5>
                    <ul class="list_ok">
                        @foreach (var module in ViewBag.moduleDescription)
                        {
                            <li>

                                <p>@module</p>
                            </li>
                        }


                    </ul>
                    <hr>
                    @*<p>Mea appareat omittantur eloquentiam ad, nam ei quas oportere democritum. Prima causae admodum id est, ei timeam inimicus sed. Sit an meis aliquam, cetero inermis vel ut. An sit illum euismod facilisis, tamquam vulputate pertinacia eum at.</p>
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="bullets">
                                    <li>Dolorem mediocritatem</li>
                                    <li>Mea appareat</li>
                                    <li>Prima causae</li>
                                    <li>Singulis indoctum</li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <ul class="bullets">
                                    <li>Timeam inimicus</li>
                                    <li>Oportere democritum</li>
                                    <li>Cetero inermis</li>
                                    <li>Pertinacia eum</li>
                                </ul>
                            </div>
                        </div>*@
                    <!-- /row -->
                </section>
                <!-- /section -->

                <section id="lessons">
                    <div class="intro_title">
                        <h2>Modules</h2>
                        <ul>
                            <li>@ViewBag.moduleCount Lessons</li>
                            <li>@ViewBag.duration</li>
                        </ul>
                    </div>
                    <div id="accordion_lessons" role="tablist" class="add_bottom_45">
                        @foreach (var module in ViewBag.Modules)
                        {
                            <div class="card">
                                <div class="card-header" role="tab" id="headingOne_@module.ModuleId">
                                    <h5 class="mb-0">
                                        <a data-toggle="collapse" href="#collapseOne_@module.ModuleId" aria-expanded="true" aria-controls="collapseOne"><i class="fas fa-plus"></i>>&nbsp;&nbsp;@Html.Raw(module.Title)</a>
                                    </h5>
                                </div>

                                <div id="collapseOne_@module.ModuleId" class="collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion_lessons">
                                    <div class="card-body">
                                        <div class="list_lessons">
                                            <ul>
                                                @foreach (var topic in ViewBag.moduleTopics)
                                                {
                                                    <li><a href="#" class="video">@topic.Title</a><span>@topic.Duration</span></li>
                                                }

                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }


                    </div>
                    <!-- /accordion -->
                </section>
                <!-- /section -->
                <!-- /section -->
            </div>
            <!-- /col -->

            <aside class="col-lg-4" id="sidebar">
                <div class="box_detail">
                    <figure>
                        <a href="~/videos/@Model.CoursePreviewUrl" class="video"><i class="arrow_triangle-right"></i><img src="~/uploads/@Model.ImageUrl" alt="" class="img-fluid"><span>View course preview</span></a>
                    </figure>
                    @if (Model.IsFree != true)
                    {
                        <div class="price">
                            @Model.Cost
                        </div>
                    }
                    else
                    {
                        <div class="price">
                            FREE
                        </div>
                    }
                    @if (Model.IsFree != true)
                    {
                        <a asp-action="Enrollments" asp-controller="Enrollment" asp-route-Id="@Model.CourseId" class="btn_1 full-width">Pay Enrollment Fee</a>
                    }
                    else
                    {
                        <a asp-action="Enrollments" asp-controller="Enrollment" asp-route-Id="@Model.CourseId" class="btn_1 full-width">Check out Free</a>
                    }
                    <div id="list_feat">
                        <h3>What's included</h3>
                        <ul>
                            <li>>>&nbsp;&nbsp;Mobile support</li>
                            <li>>>&nbsp;&nbsp;Lesson archive</li>
                            <li>>>&nbsp;&nbsp;Tutor chat</li>
                            <li>>>&nbsp;&nbsp;Course certificate (Coming Soon)</li>
                        </ul>
                    </div>
                </div>
            </aside>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>






