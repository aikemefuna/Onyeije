@model OnyeijeIgboAcademy.ViewModels.ResetPasswordViewModel
@{
    Layout = null;
    var email = ViewBag.Email;
    var firstlogin = ViewBag.FirstLogin;
}

<!------ Include the above in your HEAD tag ---------->

<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <!--Made with love by Mutiullah Samim -->
    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link href="~/assets/vendor/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/assets/vendor/sweetalert2/dist/sweetalert2.min.js"></script>
    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="styles.css">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/css/loginStyle.css" rel="stylesheet" />
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>
<body>
    <div class="container">


        <br />
        <br />
        <input type="hidden" value="@firstlogin" name="firstlogin" id="first" />
        <div>

            <div class="d-flex justify-content-center h-100">

                <div class="card">
                    <div class="card-header">
                        <h3>Reset Password</h3>


                    </div>
                    <form method="post">
                        <div class="card-body">
                            <div asp-validation-summary="All" class="text-white"></div>
                            <input asp-for="Token" type="hidden" />
                            <input asp-for="Email" type="hidden" />
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input asp-for="Password" class="form-control" placeholder="Password">
                                <span asp-validation-for="Password" class="text-blue"></span>
                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password">
                                <span asp-validation-for="ConfirmPassword" class="text-blue"></span>
                            </div>
                        </div>
                        <div class="card-footer">

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


</body>
</html>