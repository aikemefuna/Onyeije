<div class="container-fluid margin_120_0">
    <div class="main_title_2">
        <span><em></em></span>
        <h2>Recent Courses</h2>
        <p>Anyi nabata gi na ulo akwukwo Mazi Ifeanyi Nwosu Igbo</p>
    </div>



    <div class="container margin_60_35">
        <div class="row">
            @if (Model.Courses.Count() > 0)
            {
                @foreach (var course in Model.Courses)
                {
                    <div class="col-xl-4 col-lg-6 col-md-6">
                        <div class="box_grid wow">
                            <figure class="block-reveal">
                                <div class="block-horizzontal"></div>

                                <a asp-action="CourseDetail" asp-controller="Courses" asp-route-id="@course.CourseId"><img src="~/uploads/@course.ImageUrl" class="img-fluid" alt="" height="250" width="350" asp-append-version="true"></a>
                                @if (course.IsFree == true)
                                {
                                    <div class="price">FREE</div>
                                }
                                else
                                {
                                    <div class="price">@course.Cost</div>
                                }

                                <div class="preview"><span>Preview course</span></div>
                            </figure>
                            <div class="wrapper">
                                <small>Title</small>
                                <h3>@course.CourseTitle</h3>
                                 @Html.Raw(course.Description)
                            </div>
                            <ul>
                                <li><pre>Course Duration:  @ViewBag.duration</pre></li>

                                <li><a asp-action="CourseDetail" asp-controller="Courses" asp-route-id="@course.CourseId">Enroll now</a></li>
                            </ul>
                        </div>
                    </div>
                }
            }
            else
            {
        <h2>O nweghi ihe oge a biko lee ma ghaa emechaa</h2>
            }


            <!-- /box_grid -->

        </div>
        <!-- /row -->

    </div>
    <!-- /carousel -->
    <div class="container">
        <p class="btn_home_align"><a asp-action="Courses" asp-controller="Courses" class="btn_1 rounded">View all courses</a></p>
    </div>
    <!-- /container -->
    <hr>
</div>
