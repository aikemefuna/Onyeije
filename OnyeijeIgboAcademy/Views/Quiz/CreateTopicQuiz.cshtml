@model OnyeijeIgboAcademy.Models.Questions
@{
    ViewData["Title"] = "CreateTopicQuiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Create Topic Question</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a asp-action="AdminDashboard" asp-controller="Dashboard"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a asp-controller="Topics" asp-action="Index">Topics</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Create Topic Questions</li>
                        </ol>
                    </nav>
                </div>
               
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <form method="post" >
        <div class="row">
            <div class="col-lg-8">
                <div class="card-wrapper">
                    <!-- Input groups -->

                    <div class="card">
                        <!-- Card header -->
                        <div class="card-header">
                            <h3 class="mb-0">Create Topic Questions</h3>
                        </div>
                        <!-- Card body -->
                        <div class="card-body">

                            <div class="form-group">
                                <label class="form-control-label" for="exampleFormControlTextarea1">Question</label>
                                <textarea asp-for="Question" class="form-control" id="summernote"></textarea>
                                <span asp-validation-for="Question" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-sm-6 col-md-3">
                                    <div class="form-group">
                                        <label class="form-control-label" for="example4cols1Input">Option 1</label>
                                        <input asp-for="Option1" class="form-control" id="example4cols1Input" placeholder="Option A">
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-3">
                                    <div class="form-group">
                                        <label class="form-control-label" for="example4cols2Input">Option 2</label>
                                        <input asp-for="Option2" class="form-control" id="example4cols2Input" placeholder="Option B">
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-3">
                                    <div class="form-group">
                                        <label class="form-control-label" for="example4cols3Input">Option 3</label>
                                        <input asp-for="Option3" class="form-control" id="example4cols3Input" placeholder="Option C">
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-3">
                                    <div class="form-group">
                                        <label class="form-control-label" for="example4cols3Input">Option 4</label>
                                        <input asp-for="Option4" class="form-control" id="example4cols3Input" placeholder="Option D">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-8 col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="example4cols1Input">Correct Answer</label>
                                        <input asp-for="RightAnswer" class="form-control" id="example4cols1Input" placeholder="Right Answer goes here...">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <div class="input-group-prepend">
                                            <label class="form-control-label" for="exampleFormControlSelect1">Select Course</label>
                                            <select asp-for="Course" asp-items="@ViewBag.CourseId" class="custom-select custom-select-md lg-3" id="CourseId" required>
                                                <option selected>Please Select</option>
                                            </select>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <div class="input-group-prepend">
                                            <label class="form-control-label" for="exampleFormControlSelect1">Select Module</label>
                                            <select asp-for="Module" asp-items='@(new SelectList(string.Empty, "ModuleId", "Title"))' id="ModuleId" class="custom-select custom-select-lg mb-3" required>
                                            </select>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <div class="input-group-prepend">
                                            <label class="form-control-label" for="exampleFormControlSelect1">Select Topic</label>
                                            <select asp-for="TopicId" asp-items='@(new SelectList(string.Empty, "TopicId", "Title"))' id="TopicId" class="custom-select custom-select-lg mb-3"></select>
                                        </div>

                                    </div>
                                </div>

                            </div>
                      
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>

                </div>
            </div>
            </div>
      </div>

    </form>
</div>
