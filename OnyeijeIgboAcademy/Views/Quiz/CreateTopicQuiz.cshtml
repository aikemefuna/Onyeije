<script>
    $('#summernote').summernote({
        placeholder: 'Type your question. You can also copy and paste already formatted text in the text box',
        tabsize: 2,
        height: 300
    });
</script>
<script>
    $(function () {
        $('#CourseId').change(function () {
            var url = '@Url.Content("~/")' + "Quiz/getModulebyId";
            var ddlsource = "#CourseId";
            $.getJSON(url, { Id: $(ddlsource).val() }, function (data) {
                var items = "";
                $('#ModuleId').empty();
                $.each(data, function (i, row) {
                    items += "<option value= '" + row.value + "'>" + row.text + "</option>";
                });
                $('#ModuleId').html(items);
            });
        });
    });


</script>
